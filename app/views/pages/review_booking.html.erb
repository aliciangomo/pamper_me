<div class="booking-review-intro">
  <div class="booking-review-name-description">
    <p class="name">Review Your Booking</p>
    <p class="statement">Your are almost ready for your <%= @booking.treatment.name %> appointment!</p>
  </div>
  <!-- <div class="booking-review-avatar">
    <%#= image_tag( @booking.treatment.provider.user.avatar, class: "booking-review-avatar-img") %>
  </div> -->
</div>
<hr>

<div class="booking-review-description">
  <ul >
    <li>
      <p>Your provider will be <strong><%= @booking.treatment.provider.user.first_name %> <%= @booking.treatment.provider.user.last_name %></strong></p>
    </li>
    <li>
      <p>At <strong><%= @booking.treatment.provider.location %></strong></p>
    </li>
    <li>
      <p>For a <strong><%= @booking.treatment.name %></strong></p>
    </li>
    <li>
      <% date = @booking.date %>
      <p>On <strong><%= date.strftime('%A %B %d, %Y') %></strong> at <strong>13:00</strong></p>
    </li>
    <li>
      <p>The total for your booking is <strong>â‚¬<%= @booking.price %></strong></p>
    </li>
  </ul>
</div>
<hr>
<div class="booking-pay-intro">
  <div class="booking-review-name-description">
    <p class="name">How would you like to pay?</p>
  </div>
</div>
<div class="booking-pay-icons">
    <div class="provider-show-contact">
      <i class="fab fa-cc-apple-pay"></i>
    </div>
    <div class="provider-show-contact">
      <i id="selected" class="far fa-credit-card"></i>
    </div>
    <div class="provider-show-location-tag">
      <i class="fab fa-cc-paypal"></i>
    </div>
  </div>

<button class="btn button-primary btn-block">Book Appointment</button>

